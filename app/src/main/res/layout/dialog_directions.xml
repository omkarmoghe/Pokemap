<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:text="Select method of transportation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/material_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <ImageButton
            android:id="@+id/btn_directions_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_directions_walk"
            android:contentDescription="Walk" />

        <ImageButton
            android:id="@+id/btn_directions_bike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_directions_bike"
            android:contentDescription="Bike" />

        <ImageButton
            android:id="@+id/btn_directions_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_directions_car"
            android:contentDescription="Car" />

    </LinearLayout>

</LinearLayout>