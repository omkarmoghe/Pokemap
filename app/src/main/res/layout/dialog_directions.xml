<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Select method of transportation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/material_black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/btn_directions_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_directions_walk"
                android:contentDescription="Walk" />

            <ImageButton
                android:id="@+id/btn_directions_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_directions_bike"
                android:contentDescription="Bike" />

            <ImageButton
                android:id="@+id/btn_directions_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_directions_car"
                android:contentDescription="Car" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>